!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title QuenzarsGrids
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container-fluid
      .row
        .col-xs-10.col-xs-offset-1
          %h1 Quenzar's Grids
          %hr
            .text-right
              = link_to('Exit', destroy_user_session_path, method: :delete) if current_user
              = ' | ' if current_user
              = link_to('Home', games_path) if current_user
              = ' | ' if @game
              = link_to('New Game', new_game_path) if @game
              = link_to('Home', unauthenticated_root_path) unless current_user
          %hr
          = yield

    - if @game
      #spacer
      #footer.hidden-lg.hidden-md.hidden-sm
        = render 'actions'
